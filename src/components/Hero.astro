---
import { Image } from 'astro:assets'
import profileImg from '@/images/profile.jpg'
---

<section class="hero">
  <div class="hero-pattern"></div>
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <div>
          <div class="badge">Ingeniero en Informática</div>
        </div>
        <h1>Hola, soy <span class="text-primary">Abraham Galue</span></h1>
        <p>
          Creando experiencias digitales únicas y funcionales con pasión por el
          detalle y la innovación.
        </p>
        <div class="hero-buttons">
          <a href="/cv/es.pdf" target="_blank" class="btn btn-primary">
            Descargar CV
            <svg class="icon" viewBox="0 0 24 24">
              <path d="M5 12h14m-7-7l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
      <div class="hero-image">
        <div class="profile-image">
          <Image loading="eager" src={profileImg} alt="Abraham Galue" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background-color: var(--dark-blue);
    color: var(--white);
    overflow: hidden;
    padding: calc(var(--header-height) + 2rem) 0 2rem;
    position: relative;
  }

  @media screen and (width >= 768px) {
    .hero {
      padding: calc(var(--header-height) + 4rem) 0 4rem;
    }
  }

  .hero-pattern {
    background-image: linear-gradient(
        to right,
        rgba(30, 41, 59, 0.3) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgba(30, 41, 59, 0.3) 1px, transparent 1px);
    background-size: 30px 30px;
    height: 100%;
    left: 0;
    mask-image: radial-gradient(ellipse at center, white, transparent 75%);
    -webkit-mask-image: radial-gradient(
      ellipse at center,
      white,
      transparent 75%
    );
    position: absolute;
    top: 0;
    width: 100%;
  }

  .hero-content {
    display: grid;
    gap: 2rem;
    position: relative;
    text-align: center;
  }

  @media screen and (width >= 768px) {
    .hero-content {
      align-items: center;
      gap: 3rem;
      grid-template-columns: 1fr 1fr;
      text-align: left;
    }
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .hero-text h1 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
  }

  @media screen and (width >= 640px) {
    .hero-text h1 {
      font-size: 2.5rem;
    }
  }

  @media screen and (width >= 768px) {
    .hero-text h1 {
      font-size: 3rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .hero-text h1 {
      font-size: 3.5rem;
    }
  }

  .hero-text p {
    color: var(--gray-300);
    margin: 0 auto;
    max-width: 500px;
  }

  @media screen and (width >= 768px) {
    .hero-text p {
      font-size: 1.125rem;
      margin: 0;
    }
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  @media screen and (width >= 640px) {
    .hero-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  @media screen and (width >= 768px) {
    .hero-buttons {
      justify-content: flex-start;
    }
  }

  .hero-image {
    display: flex;
    justify-content: center;
    position: relative;
  }

  .profile-image {
    border-radius: var(--border-radius-full);
    border: 6px solid var(--gray-800);
    box-shadow: var(--shadow-xl);
    height: 280px;
    overflow: hidden;
    position: relative;
    width: 280px;
  }

  @media screen and (width >= 640px) {
    .profile-image {
      border: 8px solid var(--gray-800);
      height: 320px;
      width: 320px;
    }
  }

  @media screen and (width >= 768px) {
    .profile-image {
      height: 350px;
      width: 350px;
    }
  }

  .profile-image img {
    height: 100%;
    object-fit: cover;
    width: 100%;
  }
</style>
